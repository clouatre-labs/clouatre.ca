# Astro Paper Theme Colors (Dark Mode)
# Based on src/styles/global.css lines 15-21

classes: {
  # Core theme colors
  primary: {
    style: {
      fill: "#38bdf8"
      stroke: "#38bdf8"
      font-color: "#0c1222"
      border-radius: 8
      shadow: true
    }
  }
  
  muted: {
    style: {
      fill: "#1e293b"
      stroke: "#334155"
      font-color: "#f1f5f9"
      border-radius: 8
      shadow: true
    }
  }
  
  # Status colors
  success: {
    style: {
      fill: "#10b981"
      stroke: "#10b981"
      font-color: "#0c1222"
      border-radius: 8
      shadow: true
      font-size: 16
      bold: true
    }
  }
  
  warning: {
    style: {
      fill: "#f59e0b"
      stroke: "#f59e0b"
      font-color: "#0c1222"
      border-radius: 8
      shadow: true
      font-size: 16
      bold: true
    }
  }
  
  error: {
    style: {
      fill: "#0c1222"
      stroke: "#ef4444"
      font-color: "#f1f5f9"
      border-radius: 8
      shadow: true
    }
  }
  
  # Container styles
  container-before: {
    style: {
      fill: "#0c1222"
      stroke: "#ef4444"
      stroke-width: 3
      font-color: "#f1f5f9"
      border-radius: 8
      shadow: true
      font-size: 18
      bold: true
    }
  }
  
  container-after: {
    style: {
      fill: "#0c1222"
      stroke: "#10b981"
      stroke-width: 3
      font-color: "#f1f5f9"
      border-radius: 8
      shadow: true
      font-size: 18
      bold: true
    }
  }
  
  # Substep style (smaller, subtle)
  substep: {
    style: {
      fill: "#1e293b"
      stroke: "#334155"
      font-color: "#cbd5e1"
      border-radius: 6
      font-size: 14
    }
  }
  
  # Info boxes
  info: {
    style: {
      fill: "#1e293b"
      stroke: "#38bdf8"
      font-color: "#f1f5f9"
      border-radius: 8
      shadow: true
    }
  }
}
