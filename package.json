{
  "name": "clouatre.ca",
  "type": "module",
  "version": "5.5.0",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build && pagefind --site dist && cp -r dist/pagefind public/",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "check": "biome check . --files-ignore-unknown=true --diagnostic-level=error && bun run validate:headings && bun run validate:meta",
    "check:fix": "biome check --write . --files-ignore-unknown=true",
    "format": "biome format --write .",
    "lint": "biome lint . --files-ignore-unknown=true",
    "validate:headings": "markdownlint-cli2 'src/data/blog/**/*.md'",
    "validate:headings:fix": "markdownlint-cli2 --fix 'src/data/blog/**/*.md'",
    "validate:meta": "bun run scripts/validate-meta.ts",
    "test:local": "bun run build",
    "test:dev": "astro dev --open",
    "prepare": "simple-git-hooks",
    "mermaid": "./scripts/mermaid.sh"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged",
    "pre-push": "bun run build"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,astro,json,md}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ],
    "src/data/blog/**/*.md": [
      "markdownlint-cli2"
    ]
  },
  "overrides": {
    "@shikijs/types": "3.21.0"
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@resvg/resvg-js": "^2.6.2",
    "@tailwindcss/vite": "^4.1.11",
    "astro": "^5.16.6",
    "astro-indexnow": "2.1.0",
    "dayjs": "^1.11.13",
    "lodash.kebabcase": "^4.1.1",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^9.0.0",
    "satori": "^0.19.0",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.6",
    "@biomejs/biome": "2.3.11",
    "@pagefind/default-ui": "1.4.0",
    "@shikijs/transformers": "3.21.0",
    "@tailwindcss/typography": "0.5.19",
    "@types/lodash.kebabcase": "4.1.9",
    "@typescript-eslint/parser": "8.53.1",
    "eslint": "9.39.2",
    "eslint-plugin-astro": "1.5.0",
    "globals": "17.0.0",
    "gray-matter": "4.0.3",
    "lint-staged": "16.2.7",
    "markdownlint-cli2": "0.20.0",
    "pagefind": "1.4.0",
    "prettier": "3.8.1",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "simple-git-hooks": "2.13.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.53.1",
    "wrangler": "4.59.3"
  }
}
